{
  "manifest_version": 2,
  "name": "Focused Youtube: hide all elements that might drag your attention",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "vue.js",
        "content.js"
      ],
      "css": [
        "styles/style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://www.youtube.com/"
  ],
  "web_accessible_resources": [
    "fonts/Roboto-Regular.ttf",
    "styles/style.css",
    "images/search_icon.svg",
    "images/youtube_logo.png"
  ]
}
